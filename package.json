{
  "name": "@alephium/walletconnect-provider",
  "description": "Alephium Provider for WalletConnect Protocol",
  "version": "0.2.0-rc.1",
  "author": "Alephium dev",
  "homepage": "https://github.com/alephium/walletconnect",
  "repository": {
    "type": "git",
    "url": "git@github.com:alephium/walletconnect.git"
  },
  "license": "Apache-2.0",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "unpkg": "dist/umd/index.min.js",
  "files": [
    "dist"
  ],
  "keywords": [
    "wallet",
    "walletconnect"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build:pre": "run-s clean",
    "build:cjs": "npx tsc -p tsconfig.cjs.json",
    "build:umd": "webpack",
    "build": "run-s build:pre build:cjs build:umd",
    "test": "jest --detectOpenHandles -i --force-exit --config ./jest-config.json",
    "test:watch": "env TS_NODE_PROJECT=\"tsconfig.cjs.json\" jest --timeout 3000 --exit -r ts-node/register --watch --watch-files . ./test/**/*.spec.ts",
    "watch": "tsc -p tsconfig.json --watch",
    "lint": "eslint -c '.eslintrc' --fix './{src,test}/**/*.ts'"
  },
  "dependencies": {
    "@alephium/web3": "0.2.0-rc.36",
    "@alephium/web3-wallet": "0.2.0-rc.36",
    "@walletconnect/sign-client": "2.0.0-rc.3",
    "@walletconnect/types": "2.0.0-rc.3",
    "@walletconnect/utils": "2.0.0-rc.3",
    "eventemitter3": "^4.0.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/node": "^7.19.1",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.18.9",
    "@types/jest": "^29.1.1",
    "@types/node": "^18.7.23",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@walletconnect/jsonrpc-utils": "1.0.3",
    "core-js": "^3.25.3",
    "crypto-browserify": "^3.12.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-standard": "^4.1.0",
    "jest": "^29.2.0",
    "lokijs": "^1.5.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "bracketSameLine": false,
    "trailingComma": "none"
  }
}
